# Flask Configuration
# Set to 'development' for local development, 'production' for deployment
FLASK_ENV=development

# Enable/disable debug mode (1 = enabled, 0 = disabled)
# WARNING: Never enable debug mode in production!
FLASK_DEBUG=1

# Port number for the Flask server
PORT=5000

# Secret key for Flask sessions (generate a random string for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# ============================================================================
# LLM Provider Configuration
# ============================================================================

# Choose your LLM provider: 'openai', 'anthropic', 'huggingface', or 'local'
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (if using Claude)
# Get your API key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# HuggingFace Configuration (if using HuggingFace models)
# Get your API key from: https://huggingface.co/settings/tokens
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here
# HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.1

# ============================================================================
# Agent Configuration
# ============================================================================

# Maximum number of reasoning steps the agent can take
MAX_ITERATIONS=10

# Maximum tokens in agent response
MAX_TOKENS=2000

# Temperature for LLM responses (0.0 = deterministic, 1.0 = creative)
TEMPERATURE=0.7

# Enable agent memory to maintain conversation context (true/false)
ENABLE_MEMORY=true

# Maximum number of previous messages to keep in memory
MEMORY_SIZE=10

# ============================================================================
# External API Keys (Optional)
# ============================================================================

# PubMed E-utilities API (optional, increases rate limits)
# Register at: https://www.ncbi.nlm.nih.gov/account/
# PUBMED_API_KEY=your-pubmed-api-key-here

# Serper API for web search (optional)
# Get your API key from: https://serper.dev/
# SERPER_API_KEY=your-serper-api-key-here

# SerpAPI for web search (alternative to Serper)
# Get your API key from: https://serpapi.com/
# SERPAPI_API_KEY=your-serpapi-api-key-here

# ============================================================================
# Rate Limiting and Performance
# ============================================================================

# Maximum requests per hour (per IP address)
RATE_LIMIT=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable request caching (true/false)
ENABLE_CACHE=true

# Cache expiration time in seconds (3600 = 1 hour)
CACHE_TTL=3600

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/app.log

# Enable console logging (true/false)
LOG_TO_CONSOLE=true

# Log format: 'simple' or 'detailed'
LOG_FORMAT=detailed

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins for CORS (comma-separated)
# Use '*' for development, specific domains for production
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# Database Configuration (if using database for chat history)
# ============================================================================

# Database URL (example: sqlite:///medical_agent.db or postgresql://...)
# DATABASE_URL=sqlite:///medical_agent.db

# ============================================================================
# Feature Flags
# ============================================================================

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL=false

# Enable web search tool (requires SERPER_API_KEY or SERPAPI_API_KEY)
ENABLE_WEB_SEARCH=false

# Enable PDF parsing tool
ENABLE_PDF_PARSER=true

# Enable citation tracking
ENABLE_CITATIONS=true
